<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

<!--toolbar-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e7f45f09"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >


        <!--content-->

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Low1    -->
            <LinearLayout
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:background="#4df7f7f7"
                    android:id="@+id/txtDisplay"
                    android:textColor="#000"
                    android:paddingRight="16dp"
                    android:gravity="end"
                    android:layout_weight="8"
                    android:textStyle="bold"
                    android:textSize="50dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnC"
                    android:layout_weight="3"
                    android:textSize="25dp"
                    android:text="C"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <!--Low2    -->
            <LinearLayout
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_weight="1"
                android:textSize="25dp"
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn8"
                android:layout_weight="1"
                android:textSize="25dp"
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn9"
                android:layout_weight="1"
                android:textSize="25dp"
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

             <Button
                 android:id="@+id/btnDevice"
                 android:layout_weight="1"
                 android:textSize="25dp"
                 android:text="/"
                 android:layout_width="0dp"
                 android:layout_height="match_parent" />


            </LinearLayout>

            <!--Low3    -->
            <LinearLayout
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

             <Button
                 android:id="@+id/btn4"
                 android:layout_weight="1"
                 android:textSize="25dp"
                 android:text="4"
                 android:layout_width="0dp"
                 android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnMultiply"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="X"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <!--Low4    -->
            <LinearLayout
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn1"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_weight="1"
                    android:textSize="50dp"
                    android:text="-"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <!--Low5    -->
            <LinearLayout
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn0"
                    android:layout_weight="2"
                    android:textSize="25dp"
                    android:text="0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnEqual"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="="
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:text="+"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>




        </LinearLayout>





















    </android.support.v7.widget.Toolbar>






</layout>